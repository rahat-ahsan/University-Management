@model ProjectDay5Build1.Models.Student

@{
    ViewBag.Title = "Add New Student";
}
<div class="page-header" >
    
    <div class="row">
        <div class="span12">
            <h1>Add New Student</h1>
        </div>
    </div>

    <div class="row">
        <div class="span10">
            <ul class="breadcrumb">
                <li>@Html.ActionLink("Home","Index", "Home") <span class="divider">/</span></li>
                <li class="active">Add New Student</li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="span10">
        <h3>Add New Student</h3>
    </div>
</div>

@if (ViewBag.Message != null)
{
    <div class="row">
        <div class="span10">
            <div class=" alert alert-error">
                <a class="close">&times;</a>
                <strong>Error</strong> @ViewBag.Message
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="span10">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal well" }))
        {
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Add New Course</legend>
                
                <div class="control-group">
                    <label class="control-label" >Name</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.StudentName,new {@class="input-xlarge"})
                        @Html.ValidationMessageFor(model => model.StudentName)
                        <p class="help-block"></p>
                    </div>
                </div>
                
                <div class="control-group">
                    <label class="control-label" >Email</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.StudentEmail,new {@class="input-xlarge"})
                        @Html.ValidationMessageFor(model => model.StudentEmail)
                        <p class="help-block">Email must be unique</p>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" >Contact No</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.StudentContactNo,new {@class="input-xlarge"})
                        @Html.ValidationMessageFor(model => model.StudentContactNo)
                        <p class="help-block"></p>
                    </div>
                </div>
                
                <div class="control-group">
                    <label class="control-label" >Address </label>
                    <div class="controls">
                        @Html.EditorFor(model => model.StudentAddress,new {@class="input-xlarge", @row="3"})
                        @Html.ValidationMessageFor(model => model.StudentAddress)
                        <p class="help-block"></p>
                    </div>
                </div>
                
                <div class="control-group">
                    <label class="control-label" >Registration Date </label>
                    <div class="controls">
                        @Html.EditorFor(model => model.StudentRegistrationDate,new {@class="input-xlarge"})
                        @Html.ValidationMessageFor(model => model.StudentRegistrationDate)
                        <p class="help-block"></p>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" >Select Department</label>
                    <div class="controls">
                        @Html.DropDownList("DepartmentId", "Select a Department")
                        @Html.ValidationMessageFor(model => model.DepartmentId)
                        <p class="help-block"></p>
                    </div>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Add New Student</button>
                </div>

            </fieldset>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
