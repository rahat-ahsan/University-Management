@model ProjectDay5Build1.Models.Course

@{
    ViewBag.Title = "Add New Course";
}
<div class="page-header" >
    
    <div class="row">
        <div class="span12">
            <h1>Course</h1>
        </div>
    </div>

    <div class="row">
        <div class="span10">
            <ul class="breadcrumb">
                <li>@Html.ActionLink("Home","Index", "Home") <span class="divider">/</span></li>
                <li>@Html.ActionLink("Course", "Index", "Course") <span class="divider">/</span></li>
                <li class="active">Add New Course</li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="span10">
        <h3>Add New Course</h3>
    </div>
</div>

@if (ViewBag.Message != null)
{
    <div class="row">
        <div class="span10">
            <div class=" alert alert-error">
                <a class="close">&times;</a>
                <strong>Error</strong> @ViewBag.Message
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="span10">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal well" }))
        {
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Add New Course</legend>
                
                <div class="control-group">
                    <label class="control-label" >Code</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.CourseCode,new {@class="input-xlarge", @id="CourseCode"})
                        @Html.ValidationMessageFor(model => model.CourseCode)
                        <p class="help-block">Code must be unique</p>
                    </div>
                </div>
                
                <div class="control-group">
                    <label class="control-label" >Name</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.CourseName,new {@class="input-xlarge", @id="CourseName"})
                        @Html.ValidationMessageFor(model => model.CourseName)
                        <p class="help-block">Name must be unique</p>
                    </div>
                </div>
                
                <div class="control-group">
                    <label class="control-label" >Description</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.CourseDescription,new {@class="input-xlarge", @id="CourseName", @row="3"})
                        @Html.ValidationMessageFor(model => model.CourseDescription)
                        <p class="help-block"></p>
                    </div>
                </div>
                
                <div class="control-group">
                    <label class="control-label" >Course Credit</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.CourseCredit,new {@class="input-xlarge", @id="CourseCredit"})
                        @Html.ValidationMessageFor(model => model.CourseCredit)
                        <p class="help-block">Credit must be a positive integer</p>
                    </div>
                </div>
                
                <div class="control-group">
                    <label class="control-label" >Select Department</label>
                    <div class="controls">
                       @Html.DropDownList("DepartmentId", "Select a Department")
                        @Html.ValidationMessageFor(model => model.DepartmentId)
                        <p class="help-block"></p>
                    </div>
                </div>
                
                <div class="control-group">
                    <label class="control-label" >Select Semester</label>
                    <div class="controls">
                        @Html.DropDownList("SemesterId", "Select a Semester")
                        @Html.ValidationMessageFor(model => model.SemesterId)
                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Add New Course</button>
                </div>

            </fieldset>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
