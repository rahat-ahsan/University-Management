<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>@ViewBag.Title</title>
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.min.css")"  rel="stylesheet" type="text/css" />
</head>

<body id="top" data-spy="scroll" data-target=".subnav" data-offset="80" >
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                
                @Html.ActionLink("University Management App", "Index", "Home", "", new { @class = "brand" })

                <div class="nav-collapse collapse" id="main-menu">
                    <ul class="nav" id="main-menu-left">
                        <li class="@(ViewBag.Active == "Home" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home")</li>
                        
                        <li class="dropdown @(ViewBag.Active == "Department" ? "active" : "")">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Department <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Add Department", "Create", "Department")</li>
                                <li>@Html.ActionLink("Department List", "Index", "Department")</li>
                            </ul>
                        </li>
                        
                        <li class="dropdown @(ViewBag.Active == "Course" ? "active" : "")">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Course <b class="caret"></b></a>
                            <ul class="dropdown-menu" >
                                <li>@Html.ActionLink("Add Course", "Create", "Course")</li>
                                <li>@Html.ActionLink("Course List", "Index", "Course")</li>
                                <li>@Html.ActionLink("Course Information", "CourseInfo", "Course")</li>
                                <li>@Html.ActionLink("Course Assign to Teacher", "CourseAssign", "Course")</li>
                            </ul>
                        </li>
                        
                        <li class="dropdown @(ViewBag.Active == "Teacher" ? "active" : "")">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Teacher <b class="caret"></b></a>
                            <ul class="dropdown-menu" >
                                <li>@Html.ActionLink("Add Teacher", "Create", "Teacher")</li>
                                <li>@Html.ActionLink("Teacher List", "Index", "Teacher")</li>
                            </ul>
                        </li>
                        
                        <li class="dropdown @(ViewBag.Active == "Student" ? "active" : "")">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Student <b class="caret"></b></a>
                            <ul class="dropdown-menu" >
                                <li>@Html.ActionLink("Add Student", "Create", "Student")</li>
                                <li>@Html.ActionLink("Student List", "Index", "Student")</li>
                            </ul>
                        </li>
                        
                        <li class="dropdown @(ViewBag.Active == "Enrollment" ? "active" : "")">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Enrollment <b class="caret"></b></a>
                            <ul class="dropdown-menu" >
                                <li>@Html.ActionLink("Enroll a Student", "Create", "Enrollment")</li>
                                <li>@Html.ActionLink("Enrolled Student List", "Index", "Enrollment")</li>
                                <li>@Html.ActionLink("Result Entry", "ResultEntry", "Enrollment")</li>
                                <li>@Html.ActionLink("View Result", "ViewResult", "Enrollment")</li>
                            </ul>
                        </li>
                        
                        <li class="dropdown @(ViewBag.Active == "RoomAllocation" ? "active" : "")">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Room Allocation<b class="caret"></b></a>
                            <ul class="dropdown-menu" >
                                <li>@Html.ActionLink("Allocate Room", "Create", "AllocateRoom")</li>
                                <li>@Html.ActionLink("List of Allocate Room", "Index", "AllocateRoom")</li>
                                <li>@Html.ActionLink("View Class Schedule", "ClassSchedule", "AllocateRoom")</li>
                            </ul>
                        </li>
                        
                        <li class="@(ViewBag.Active == "About" ? "active" : "")">@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                    
                </div>
            </div>
        </div>
    </div>
    
    <div class="container">
        <div class="row">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
    
        
        
    </div>
    <footer class="row">
            
            <div class="span10">
            <p class="pull-right"><a href="#top">Back to top</a></p>
            <p class="offset4"> This Application is developed by Rahat Ahsan - OOP-41th Batch </p>    
            </div> 

    </footer>
    <script src="~/Scripts/jquery-2.0.3.min.js"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap.min.js")" type="text/javascript"></script>
    
    @Scripts.Render("~/bundles/jquery")
   @RenderSection("scripts", required: false)

</body>
</html>